{
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    "target": "es2024",
    "moduleResolution": "node",
    "declaration": false,
    "sourceMap": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noEmit": true,
    "noImplicitAny": true,
    "strict": true,
    "baseUrl": ".",
    "lib": ["es2024", "dom"],
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
